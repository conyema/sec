{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "no-loss-of-precision": "off",
      "no-nonoctal-decimal-escape": "off",
      "no-useless-backreference": "off",
      "no-unsafe-optional-chaining": "off"
    }
}
