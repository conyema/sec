extends ../layout

block content
  // Hero
  section(id="hero" class="hero")
    .container-fluid.container-lg
      //- h1.title.text-center   Estates
      h1(class="title text-center") Sign Up


  section.section
    .container-fluid

      // Login Form
      //- data-uri="/api/v1/users"
      //- form(id="estate-form" class="box-container gform")
      form(
        id="reg-form"
        class="form mt-5"
        data-method="POST"
        data-uri="/v1/users"
      )
        .card.container.img-container.py-3
          p.small.text-muted.fst-italic  * = Required
          .col

            //- <img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">

            div(class="input-group mb-4")
              label(class="input-group-text" for="firstName")  First Name
              input(type="text" class="form-control" id="firstName" name="firstName")

            div(class="input-group mb-4")
              label(class="input-group-text" for="lastName")  Last Name
              input(type="text" class="form-control" id="lastName" name="lastName")

            div(class="input-group mb-4")
              label(class="input-group-text" for="email")  Email *
              input(type="email" class="form-control" id="email" name="email" required)

            div(class="input-group mb-4")
              label(class="input-group-text" for="password")  Password *
              input(type="password" class="form-control" id="password" name="password" minlength="8" autocomplete="new-password" title="min 8 characters(including Lowercase, Uppercase, Numbers and Symbols)" required)

            div(class="input-group mb-4 d-none")
              input(type="text" id="source" name="source" value="basic" hidden)

            div(class="input-group mb-4")
              button(class="btn btn-main" type="submit") Sign Up
              button(class="btn btn-main" type="reset") Reset

            //- p Already registered?
              a(class="link ms-1" href=`/manage/login` title="Sign Up")  Login

