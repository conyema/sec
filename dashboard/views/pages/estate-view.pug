      //- .card.mt-5.shadow
      .card.mt-5
        div(class="card-body")
          ul(class="list-group list-group-flush")
            each value, key in estate
              if (key =="featured")
                li.list-group-item
                  div.text-capitalize          #{key}
                  div.text-secondary.small=     `${value == true ? "yes": "no"}`

              //- Do not list the id, poster & gallery fields
              else if (key !=="_id" && key!=="gallery" && key!=="poster")
                li.list-group-item
                  div.text-capitalize          #{key}
                  div.text-secondary.small     #{value || "nil"}
                  //- if key=="poster"
                    div.text-secondary
                      a(class="link" href=`${value.url}`)    #{value.tag} image
                  //- else
                    div.text-secondary                       #{value}



  // Gallery
  section.section
    .container-fluid
      h2.title.text-center    Gallery

      if  estate.poster
        .img-container
          +imgCard(estate.poster, estate._id)
          //- li.list-group-item
            div.text-capitalize    URL
            div.text-secondary
              a(href=estate.poster.url)   #{estate.poster.tag}

      if estate.gallery
        .row.row-cols-1.row-cols-md-2.row-cols-lg-3.g-4.py-5
          each image in estate.gallery
            +imgCard(image, estate._id)
      else
        p.text-center.m-0    No image in gallery


